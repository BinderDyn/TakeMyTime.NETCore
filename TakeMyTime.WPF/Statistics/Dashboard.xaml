<Page x:Class="TakeMyTime.WPF.Statistics.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TakeMyTime.WPF.Statistics"
      xmlns:resources="clr-namespace:TakeMyTime.WPF.Resources"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard"
      Background="{StaticResource BackgroundGrey}"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <lvc:PieChart Grid.Row="1" Grid.Column="0"
                          Margin="10"
                          LegendLocation="Right" Series="{Binding ShareOfProjects}"
                          x:Name="pc_ProjectShare"
                          InnerRadius="50"/>
            <Label 
                Margin="0 5 5 5"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Content="{x:Static resources:Dashboard.ProjectFilterLabel}"></Label>
            <ComboBox 
                Margin="0 5 50 0"
                Grid.Row="0" Grid.Column="1"
                x:Name="cb_ProjectFilter"
                Width="200"
                HorizontalAlignment="Right"
                ItemsSource="{Binding ProjectViewModels}"
                SelectionChanged="cb_ProjectFilter_SelectionChanged"
                DisplayMemberPath="Name"
                ></ComboBox>
            <lvc:PieChart       Grid.Row="1" 
                                Margin="10"
                                Grid.Column="1" 
                                Series="{Binding ShareOfAssignments}"
                                LegendLocation="Right"
                                x:Name="pc_AssignmentShare"
                                Visibility="Hidden"
                                InnerRadius="50"
                                ></lvc:PieChart>
            <lvc:CartesianChart
                Grid.Row="2"
                Grid.Column="1"
                Visibility="Hidden"
                x:Name="cc_Productivity"
                Margin="3"
                Series="{Binding ProductiveDays}"
                >
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis x:Name="x_valueAxis"></lvc:Axis>
                </lvc:CartesianChart.AxisY>
                <lvc:CartesianChart.AxisX>
                    <lvc:DateAxis x:Name="y_dateAxis" Labels="{Binding DatesForProductivity}"></lvc:DateAxis>
                </lvc:CartesianChart.AxisX>
            </lvc:CartesianChart>
        </Grid>
    </Grid>
</Page>
